doctype html
html

    block local
        -var currentPage = 'dashboard' //default
        -var collapsible = ''
        -var bodyClass = ''

    head
        // Basic Page Needs
        meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
        meta(name="msapplication-tap-highlight" content="no")
        title Sail and Share
        meta(name="description" content="Association pour le partage de la voile")
        meta(name="author" content="studioNS")
        // Mobile Specific Metas
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        // FONT
        link(href='http://fonts.googleapis.com/css?family=Lato:400italic,100,300,700,800,400' rel='stylesheet'
        type='text/css')
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        // ICONS
        script(src='/assets/fonts/icons.js')
        // CSS
        block css
            link(href="/assets/resources/themes/collapsible-menu/materialize.css" type="text/css" rel="stylesheet")
            link(href="/assets/resources/themes/collapsible-menu/style.css" type="text/css" rel="stylesheet")
            // INCLUDED PLUGIN CSS ON THIS PAGE
            link(href="/assets/resources/prism/prism.css" type="text/css" rel="stylesheet")
            link(href="/assets/resources/perfect-scrollbar/perfect-scrollbar.css" type="text/css" rel="stylesheet")
            //- link(href="/assets/resources/flag-icon/css/flag-icon.min.css" type="text/css" rel="stylesheet")
        block jsStart
    body(class=bodyClass)
        block body
            // Start Page Loading
            include ./components/wait.pug
            // Document Start
            // Header
            include ./components/header.pug
            // Main
            div#main
                div.wrapper
                    // Left SideNav
                    include ./components/sidenav.pug
                    // Content
                    section.content
                        // Breadcrumb
                        block breadcrumbs
                        div.container
                            block content
            // Footer
            include ./components/footer.pug

        block jsEnd
            script(type="text/javascript" src="/assets/resources/jquery-3.2.1.min.js")
            // materialize js
            script(type="text/javascript" src="/assets/resources/js/materialize.min.js")
            // prism
            script(type="text/javascript" src="/assets/resources/prism/prism.js")
            // scrollbar
            script(type="text/javascript" src="/assets/resources/perfect-scrollbar/perfect-scrollbar.min.js")
            // plugins.js - Some Specific JS codes for Plugin Settings
            script(type="text/javascript" src="/assets/resources/js/plugins.js")
