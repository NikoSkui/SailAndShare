ul#dropdownAsso.dropdown-content(style="top: 64px;")
    li: a(href="/#equipe" onclick="$('.equipeSlider').moveToSlide(1)") Equipe
    li: a(href="/#stages" onclick="$('.stagesSlider').moveToSlide(1)") Stages
    li: a(href="/#valeurs" onclick="$('.valeursSlider').moveToSlide(1)") Valeurs

ul#dropdownUser.dropdown-content(style="top: 64px;width:300px;")
    if user && user.role === 'admin'
        li: a(href="/admin")
            i.fa.fa-sign-in
            |
            | Admin
    li: a(href="/users/logout")
        i.fa.fa-sign-out
        |
        | Exit

ul#nav-mobile.sidenav
    li: a(href="/#actu") l'actu
    li: a.dropdown-button(data-target="dropdownAsso" href="#asso") L'association
    li: a(href="/#gallery") Galerie
    li: a(href="/#footer") Nous rejoindre
    li: a(href="/blog") Blog

div.bg-header

// Navbar and Header
div.navbar
    nav.nav-extended.transparent

        div.nav-background(style="opacity: 1;")
            div.pattern.active(
                style="background-image: url('/assets/images/headerSection/landingPage@3x-80.jpg');"
            )

        div.container
            div.nav-wrapper
                a(class="brand-logo text-logo" href="/")
                    | Sail
                    b and
                    | Share
                a(class="brand-logo icon-logo" href="/"): img(src="/assets/images/logo.png")
                ul#nav-desktop.right.hide-on-med-and-down
                    li: a(href="/#actu") l'actu
                    li: a.dropdown-button(data-target="dropdownAsso" href="#asso") L'association
                    li: a(href="/#gallery") Galerie
                    li: a(href="#footer") Nous rejoindre
                    li.active: a(href="/blog") Blog
                    if user
                        li: a.dropdown-button(data-target="dropdownUser" href="#"): i.fa.fa-user.teal-text
                    else
                        li: a(href="/admin"): i.fa.fa-user
                //- Include this line below
                a(class="sidenav-trigger" href="#" data-target="nav-mobile"): i.fa.fa-bars
                //- End

            div.nav-header.center
                h1: b Blog
                //- div.tagline My life
                h5.weight-300(style="margin-bottom:60px;") La vie de l'association

        // Fixed Masonry Filters
        div.categories-wrapper.grey.darken-3
            div.categories-container
                ul.categories.container
                    li: a.active(href="#all") Tout
                    if user
                        li: a(href="#membre") Réservé aux membres
                    each category in categories
                        li: a(href='#' + (category.slug)) #{category.name}

