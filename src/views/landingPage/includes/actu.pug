// Section #actu
div#actu.scrollspy
    //- Actu 1/x Section -->
    div.white.black-text
        section.hide-on-med-and-down
            div.sectionSlider.actuSlider.hideButtons
                ul
                    li
                        div.container
                            h2.title-section Notre dernière actualité
                            div.row
                                div.col.s12
                                    //- Item -->
                                    div.row
                                        //- Item -->
                                        each article, i in articles
                                            div.col.s10.m6.l4.offset-s1.grid
                                                figure.effect-bubba
                                                    img.responsive-img(src=`assets/images/blog/landing/${article.picture}` alt=`img-${article.slug}`)
                                                    figcaption
                                                        //- h4.weight-300 First <b>#{article.title}</b>
                                                        h4.weight-300 #{article.title}
                                                        //- p.grey-text.text-darken-4 Programmer Designer
                                                        a.no-smooth-scroll(onclick=`$('.actuSlider').moveToLink(${i})`) Détails
                    each article, i in articles
                        li.link
                            div.container
                                div.row
                                    div.col.s12.m10.l5.offset-m1.animatedBox.animatedBox-left.animatedBox-list
                                        h5 #{article.title}
                                        h6.weight-300 Extrait
                                        hr
                                        p #{article.excerpt}
                                        p(style="display:flex;justify-content:space-between")
                                            a.btn.no-smooth-scroll.grey.darken-3(onclick="$('.sectionSlider').backToSlide()")
                                                i.fa.fa-arrow-left
                                            a(href=`/blog#!${article.slug}` class="btn no-smooth-scroll")
                                                i
                                                | Détails
                                    div.col.s12.m7.l7.offset-m1.animatedBox.animatedBox-right
                                        div
                                            img.responsive-img(src=`assets/images/blog/thumb/${article.picture}` alt=`img-${article.slug}` style="height:300px;width:100%;")

            +nextLink('#what')
// Separator
div.parallax-container.hide-on-med-and-down
    div.parallax: img(src="assets/images/landingPage/separator/actu.jpg")